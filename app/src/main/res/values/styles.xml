<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorBlue</item>
    </style>

    <!-- Default -->
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextHint">
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/registration_margin</item>
    </style>

    <!-- Start Screen -->
    <style name="StartScreenDescription">
        <item name="android:textSize">@dimen/label_large_text_size</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StartScreenDescription.Title">
        <item name="android:textSize">@dimen/label_super_extra_large_text_size</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/catwalk</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Registration Screen -->
    <style name="RegistrationTitle">
        <item name="android:textSize">@dimen/label_extra_large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegistrationSubtitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/label_small_text_size</item>
    </style>

    <!-- All Walkers Fragment -->
    <style name="ButtonTitle">
        <item name="android:textSize">@dimen/label_error_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
